@model NoSQL_project.Models.User

<h2>Delete User</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this user?</p>
</div>

<div class="mb-3">
    <strong>Name:</strong> @Model.FirstName @Model.LastName
</div>
<div class="mb-3">
    <strong>Email:</strong> @Model.Email
</div>
<div class="mb-3">
    <strong>Username:</strong> @Model.Username
</div>
<div class="mb-3">
    <strong>Role:</strong> @Model.Role
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


