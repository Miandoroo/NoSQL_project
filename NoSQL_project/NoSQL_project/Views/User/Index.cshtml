@model List<User>

@{
    ViewData["Title"] = "UserList";
}


<h1>Users</h1>


<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Make a new User
    </a>
</div>


<table border="1" cellpadding="8" cellspacing="0" style="border-collapse: collapse; width: 100%;">
    <thead style="background-color: #f2f2f2;">
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            <th>Location</th>
            <th>Type</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (User user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Location</td>
                <td>@user.Type</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <a asp-controller="Ticket"
                        asp-action="Create"
                        asp-route-userId="@user.Id"
                        class="btn btn-sm btn-primary">
                        <i class="bi bi-ticket-perforated"></i> Make a new ticket
                    </a>
                    <a asp-controller="User"
                        asp-action="Update"
                        asp-route-id="@user.Id"
                        class="btn btn-sm btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>

                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
