@model Ticket

@{
    ViewData["Title"] = "Ticket Details";
}

<h1>Ticket Details</h1>

<div class="card">
    <div class="card-header">
        <h4>@Model.IncidentSubject</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Subject</dt>
            <dd class="col-sm-9">@Model.IncidentSubject</dd>

            <dt class="col-sm-3">Date:</dt>
            <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">@Model.status</dd>

            <dt class="col-sm-3">Incident Type:</dt>
            <dd class="col-sm-9">@Model.IncidentType</dd>

            <dt class="col-sm-3">Deadline:</dt>
            <dd class="col-sm-9">@(Model.Deadline?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</dd>

            <dt class="col-sm-3">Priority:</dt>
            <dd class="col-sm-9">@Model.Priority</dd>

            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@Model.Description</dd>

        </dl>
    </div>
    <div class="card-footer">
        @if (User.IsInRole("ServiceDeskEmployee"))
        {
            <div class="d-flex flex-wrap gap-1">

                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this ticket?')">
                        <i class="bi bi-trash"></i> Delete Ticket
                    </button>
                </form>

                @if (Model.Status == 0 || Model.Status == 1)
                {
                    <form asp-action="Escalate" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to escalate this ticket?');">
                        <button type="submit" class="btn btn-sm btn-warning">Escalate</button>
                    </form>
                }

                @if (Model.Status != 3)
                {
                    <form asp-action="Close" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to close this ticket?');">
                        <button type="submit" class="btn btn-sm btn-success">Close</button>

                    </form>
                }
            </div>
        }
    </div>
</div>
