@model NoSQL_project.Models.Tickets
@functions {
    string StatusText(int s) => s switch { 0 => "Open", 1 => "In progress", 2 => "Resolved", 3 => "Closed", _ => "Unknown" };
    string StatusClass(int s) => s switch { 0 => "secondary", 1 => "warning", 2 => "success", 3 => "dark", _ => "secondary" };
}
<h1>Ticket Details</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date:yyyy-MM-dd</dd>
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9"><span class="badge bg-@StatusClass(Model.Status)">@StatusText(Model.Status)</span></dd>
            <dt class="col-sm-3">Subject</dt>
            <dd class="col-sm-9">@Model.IncidentSubject</dd>
            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.IncidentType</dd>
            <dt class="col-sm-3">Deadline</dt>
            <dd class="col-sm-9">@Model.Deadline:yyyy-MM-dd</dd>
            <dt class="col-sm-3">Priority</dt>
            <dd class="col-sm-9">@Model.Priority</dd>
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
    </div>
    <div class="card-footer d-flex gap-2">
        <a asp-controller="Ticket" asp-action="Index" class="btn btn-secondary">Back</a>
        <a asp-controller="Ticket" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <form asp-controller="Ticket" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button class="btn btn-danger" onclick="return confirm('Delete this ticket?')">Delete</button>
        </form>
    </div>
</div>
