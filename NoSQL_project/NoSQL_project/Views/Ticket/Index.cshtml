@model List<Ticket>

<h1>Tickets</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Ticket</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-8">
            <input type="text" name="searchQuery" value="@ViewBag.SearchQuery" class="form-control" placeholder="Search tickets (use AND/OR operators, e.g., 'error AND server' or 'bug OR issue')" />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-action="Index" class="btn btn-secondary">Clear</a>
        </div>
    </div>
</form>

<table border="1" cellpadding="8" cellspacing="0" style="border-collapse: collapse; width: 100%;">
    <thead style="background-color: #f2f2f2;">
        <tr>
            <th>Date</th>
            <th>Status</th>
            <th>Incident Subject</th>
            <th>Incident Type</th>
            <th>DeadLine</th>
            <th>Priority</th>
            <th>Description</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Ticket ticket in Model)
        {
            <tr>
                <td>@ticket.Date.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@ticket.Status</td>
                <td>@ticket.IncidentSubject</td>
                <td>@ticket.IncidentType</td>
                <td>@(ticket.Deadline?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</td>
                <td>@ticket.Priority</td>
                <td>@ticket.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <a asp-controller="Ticket"
                       asp-action="Update"
                       asp-route-id="@ticket.Id"
                       class="btn btn-sm btn-primary">
                        <i class="bi bi-ticket-perforated"></i> Editing existing ticket
                    </a>
                    @if (User.IsInRole("ServiceDeskEmployee"))
                    {
                        <a asp-controller="Ticket"
                           asp-action="Delete"
                           asp-route-id="@ticket.Id"
                           class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
