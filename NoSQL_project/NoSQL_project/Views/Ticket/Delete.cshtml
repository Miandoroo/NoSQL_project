@model NoSQL_project.Models.Tickets

@{
    ViewData["Title"] = "Delete Ticket";
}

<h2 class="text-danger">Delete Ticket</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this ticket?</strong>
    <p>This action cannot be undone.</p>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Incident Subject:</dt>
            <dd class="col-sm-9">@Model.IncidentSubject</dd>

            <dt class="col-sm-3">Incident Type:</dt>
            <dd class="col-sm-9">@Model.IncidentType</dd>

            <dt class="col-sm-3">Priority:</dt>
            <dd class="col-sm-9">@Model.Priority</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Date:</dt>
            <dd class="col-sm-9">@Model.Date</dd>

            <dt class="col-sm-3">Deadline:</dt>
            <dd class="col-sm-9">@Model.Deadline</dd>

            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
    </div>
</div>

<form asp-controller="Ticket" asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Confirm Delete
    </button>
    <a asp-controller="Ticket" asp-action="Index" class="btn btn-secondary">
        Cancel
    </a>
</form>
