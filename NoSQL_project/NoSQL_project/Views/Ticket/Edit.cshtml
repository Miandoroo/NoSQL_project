@model NoSQL_project.Models.Tickets
@{
    var postAction = User.IsInRole("ServiceDesk") ? "Create" : "CreateMine";
    var priorities = new[] { "Low", "Normal", "High", "Critical" };
    var incidentTypes = new[] { "request", "incident", "problem", "change" };
}

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}
<div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

<form asp-controller="Ticket" asp-action="Edit" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="IncidentSubject" class="form-label"></label>
        <input asp-for="IncidentSubject" class="form-control" />
        <span asp-validation-for="IncidentSubject" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IncidentType" class="form-label"></label>
        <select asp-for="IncidentType" class="form-select">
            @foreach (var it in incidentTypes)
            {
                <option value="@it">@it</option>
            }
        </select>
        <span asp-validation-for="IncidentType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Priority" class="form-label"></label>
        <select asp-for="Priority" class="form-select">
            @foreach (var p in priorities)
            {
                <option value="@p">@p</option>
            }
        </select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option value="0">Open (0)</option>
            <option value="1">In progress (1)</option>
            <option value="2">Resolved (2)</option>
            <option value="3">Closed (3)</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Deadline" class="form-label"></label>
        <input asp-for="Deadline" type="date" class="form-control" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Save</button>
    <a asp-controller="Ticket" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
